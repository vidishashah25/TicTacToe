<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="boardbutton" parent="@android:style/Widget.Button">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">70sp</item>
        <item name="android:layout_height">70sp</item>
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:padding">8sp</item>
        <item name="android:layout_margin">8sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>
